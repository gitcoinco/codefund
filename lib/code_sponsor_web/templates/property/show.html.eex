<ol class="breadcrumb">
  <li class="breadcrumb-item">Home</li>
  <li class="breadcrumb-item"><%= link "Properties", to: property_path(@conn, :index) %></li>
  <li class="breadcrumb-item active"><%= @property.name %></li>
  
  <li class="breadcrumb-menu">
    <div class="btn-group" role="group">
      <%= link to: property_path(@conn, :edit, @property), class: "btn" do %>
        <i class="fa fa-edit"></i> Edit Property
      <% end %>
    </div>
  </li>
</ol>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          Details
        </div>
        <div class="card-body">
          <div class="details-table">
            <table class="table table-responsive-sm">
              <thead>
                <tr>
                  <th>Field</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><strong>ID</strong></td>
                  <td><%= @property.id %></td>
                </tr>
                <tr>
                  <td><strong>Developer</strong></td>
                  <td><%= @property.user_id %></td>
                </tr>
                <tr>
                  <td><strong>Name</strong></td>
                  <td><%= @property.name %></td>
                </tr>
                <tr>
                  <td><strong>URL</strong></td>
                  <td><%= link @property.url, to: @property.url, target: "_blank" %></td>
                </tr>
                <tr>
                  <td><strong>Description</strong></td>
                  <td><%= @property.description %></td>
                </tr>
                <tr>
                  <td><strong>Legacy ID</strong></td>
                  <td><%= @property.legacy_id %></td>
                </tr>
                <tr>
                  <td><strong>Current Sponsorship</strong></td>
                  <td><%= if (@sponsorship), do: @sponsorship.id, else: "None" %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          Embed Instructions
        </div>
        <div class="card-body">
          <p>See https://badge.fury.io/for/rb/dotenv</p>

          <h5>Pixel Code</h5>
          <pre><code><%= track_url @conn, :pixel, @property %></code></pre>

          <h5>Logo Code</h5>
          <pre><code><%= track_url @conn, :logo, @property %></code></pre>

          <h5>Click Link</h5>
          <pre><code><%= track_url @conn, :click, @property %></code></pre>
        </div>
      </div>
    </div>
  </div>
</div>
